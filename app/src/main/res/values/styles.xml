<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App main theme -->
    <style name="Theme.KaushalXchange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- White status bar -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Dark icons in status bar -->
        <item name="android:windowLightStatusBar">true</item>



    </style>

    <!-- Your custom button/text style -->
    <style name="McqOptionStyle">
        <item name="android:background">@drawable/mcq_option_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">none</item>   <!--   prevent "..." -->
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>





</resources>
